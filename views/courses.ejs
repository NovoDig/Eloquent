<%- include("header.ejs"); %>

<section class="py-5">
    <div class="container text-center">
        <h2>Explore Our Courses!</h2>
        <p>Here is a list of all availiable courses.</p><br/>
        <div class="row">
        <%
            courses.forEach((course, i) => {
                %>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= course[0] %></h5>
                                <p class="card-text"><%= course[1] %></p>
                                <a href="/courses/<%= course[0] %>" class="btn btn-primary">Enroll Now</a>
                            </div>
                        </div>
                    </div>
                <%
                // Every 3 loops add a <br/> to create a new row
                if ((i + 1) % 3 === 0) {
                    %>
                </div><br/><div class="row">
                    <%
                }
                
            });
        %>
        </div>
        <footer class="bg-light text-center py-4">
            <div class="container">
                <p>&copy; 2025 <%= title %>. All rights reserved.</p>
            </div>
        </footer>
    
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>